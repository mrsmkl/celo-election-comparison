{
  "compilerOptions": {
    "outDir": "lib",
    "rootDir": "src",
    "baseUrl": ".",
    "lib": ["es7", "es2017"],
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noEmit": true,
    "esModuleInterop": true,
  },
  "include": ["src", "@celo/contractkit/types"],
  "exclude": ["node_modules/"]
}
