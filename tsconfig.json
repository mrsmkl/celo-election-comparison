{
  "compilerOptions": {
    "lib": ["dom", "es2015", "es2016"],
    "target": "es5",
    "jsx": "preserve",
    "composite": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "declaration": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "lib",
    "rootDir": "src",
    "baseUrl": ".",
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noEmit": false,
    "esModuleInterop": true,
  },
  "include": ["src", "./node_modules/@celo/contractkit/types"]
}
